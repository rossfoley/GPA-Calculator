source "http://rubygems.org"

gem "rails"
gem "pg"

gem "devise"
gem "cancan"

gem "jquery-rails"
gem "haml"

gem "rails_12factor", group: :production

group :development, :test do
  gem "haml-rails"
  gem "rails3-generators"

  gem "rspec-rails"
  gem "factory_girl_rails"
  gem "capistrano"
  gem "sqlite3-ruby", :require => "sqlite3"
  gem "guard-rspec"
end

group :assets do
  gem "sass-rails"
  gem "coffee-rails"
  gem "uglifier"
  gem "twitter-bootstrap-rails"
end
