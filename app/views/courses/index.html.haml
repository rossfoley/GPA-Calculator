#user_status
  %h2 Course Summary
  %table
    %tr
      %td Lewis Mills GPA:
      %td #{@user.gpa.round(3)}
    %tr
      %td Standardized GPA:
      %td #{@user.standard_gpa.round(3)}
    %tr
      %td Honor Status:
      %td #{@user.honor_status}
#courses_table
  %table
    %tr
      %th Name
      %th Grade
      %th Level
      %th Credit
      %th
      %th

    - @user.courses.each do |course|
      %tr
        %td= course.name
        %td= course.grade
        %td= course.level
        %td= course.credit
        %td= link_to 'Edit', edit_user_course_path(@user, course)
        %td= link_to 'Destroy', [@user, course], :confirm => 'Are you sure?', :method => :delete
    %tr
      %td= link_to 'New Course', new_user_course_path, :id => "new_course"
.clear
