- title "GPA Calculator | Courses"
.row
  #user_status.span4
    %h2 Course Summary
    %table.table
      %tr
        %td Lewis Mills GPA:
        %td #{@user.gpa.round(3)}
      %tr
        %td Standardized GPA:
        %td #{@user.standard_gpa.round(3)}
      %tr
        %td Honor Roll Status:
        %td #{@user.honor_status}
  #courses_table.span8
    %h2 Courses
    %table.table.table-striped
      %tr
        %th Name
        %th Grade
        %th Level
        %th Credit
        %th
      = render @user.courses
    = link_to 'New Course', new_user_course_path, id: "new_course", class: "btn btn-primary"
